<Window x:Class="Sea_Battle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sea_Battle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- This is where the frame control that hosts the various pages is defined -->
        <Frame x:Name="StartFrame" NavigationUIVisibility="Hidden"/>

        <!-- This frame is to show the escape-screen -->
        <Frame x:Name="OverFrame" Background="Transparent" NavigationUIVisibility="Hidden" Visibility="Collapsed"/>
    </Grid>
</Window>
